<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tapitlac.asistenciasdecursos.alumnos_agregar">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="76dp"
            android:text="Nombre"
            android:textSize="18sp"
            app:layout_anchor="@+id/include" />

        <EditText
            android:id="@+id/ET_Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignStart="@+id/ET_Apellido"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ET_Apellido"
            android:layout_alignBottom="@+id/ET_Apellido"
            android:layout_alignStart="@+id/textView"
            android:text="Apellido"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/ET_Apellido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ET_Con"
            android:layout_below="@+id/ET_Nombre"
            android:layout_marginTop="19dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ET_Con"
            android:layout_alignBottom="@+id/ET_Con"
            android:layout_alignStart="@+id/textView2"
            android:text="NÂ°Control"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/ET_Con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ET_Apellido"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@+id/textView3"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ET_Con"
            android:layout_marginTop="14dp"
            android:onClick="GuardarDatos"
            android:text="Agregar" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
